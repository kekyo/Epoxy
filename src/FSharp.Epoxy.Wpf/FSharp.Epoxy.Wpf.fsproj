<Project Sdk="Microsoft.NET.Sdk.WindowsDesktop">

  <PropertyGroup>
    <AssemblyName>FSharp.Epoxy</AssemblyName>
    <TargetFrameworks>net461;net48;netcoreapp3.0;netcoreapp3.1;net5.0-windows</TargetFrameworks>
    <UseWpf>true</UseWpf>
    <AssemblyTitle>FSharp.Epoxy.Wpf</AssemblyTitle>
    <PackageId>FSharp.Epoxy.Wpf</PackageId>
    <PackageTags>$(PackageTags);fsharp;wpf</PackageTags>
    <EpoxyBuildAppendPackageDependency>true</EpoxyBuildAppendPackageDependency>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)' == 'Debug'">
    <DefineConstants>DEBUG;TRACE;WINDOWS_WPF</DefineConstants>
  </PropertyGroup>
  <PropertyGroup Condition="'$(Configuration)' == 'Release'">
    <DefineConstants>TRACE;WINDOWS_WPF</DefineConstants>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.NETFramework.ReferenceAssemblies" Version="1.0.0" PrivateAssets="All" />
    <PackageReference Update="System.ValueTuple" Version="4.5.0" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\Epoxy.Core.Wpf\Epoxy.Core.Wpf.csproj" />
  </ItemGroup>

  <ItemGroup>
    <None Include="../../Images/Epoxy.100.png" Pack="true" PackagePath="" />
    <Content Include="build\*.*" CopyToOutputDirectory="Never" PackagePath="build/" />
    <Content Include="buildMultiTargeting\*.*" CopyToOutputDirectory="Never" PackagePath="buildMultiTargeting/" />
  </ItemGroup>

  <ItemGroup>
    <Compile Include="Properties\AssemblyInfo.fs" />
    <Compile Include="../FSharp.Epoxy/Internal/*.fs" />
    <Compile Include="../FSharp.Epoxy/*.fs" />
    <Compile Include="../FSharp.Epoxy/Supplemental/*.fs" />
    <Compile Include="../FSharp.Epoxy/Synchronized/*.fs" />
    <Compile Include="../FSharp.Epoxy/Advanced/*.fs" />
  </ItemGroup>

</Project>
