<?xml version="1.0" encoding="utf-8"?>
<package xmlns="http://schemas.microsoft.com/packaging/2012/06/nuspec.xsd">
  <metadata>
    <id>Epoxy.Xamarin.Forms</id>
    <version>$PackageVersion$</version>
    <authors>Kouji Matsui (@kozy_kekyo, @kekyo@mastodon.cloud)</authors>
    <requireLicenseAcceptance>false</requireLicenseAcceptance>
    <license type="expression">Apache-2.0</license>
    <licenseUrl>https://licenses.nuget.org/Apache-2.0</licenseUrl>
    <icon>Epoxy.100.png</icon>
    <projectUrl>https://github.com/kekyo/Epoxy.git</projectUrl>
    <description>An independent flexible XAML MVVM library for .NET</description>
    <releaseNotes>$PackageReleaseNotes$</releaseNotes>
    <copyright>Copyright (c) Kouji Matsui</copyright>
    <tags>mvvm viewmodel easy simple combinable async awaitable command xamarin</tags>
    <repository type="git" url="https://github.com/kekyo/Epoxy.git" branch="$RepositoryBranch$" commit="$RepositoryCommit$" />
    <dependencies>
      <group targetFramework=".NETStandard2.0">
        <dependency id="Epoxy.Build" version="$PackageVersion$" />
        <dependency id="Epoxy.Core.Xamarin.Forms" version="$PackageVersion$" exclude="Build,Analyzers" />
        <dependency id="System.Threading.Tasks.Extensions" version="4.5.4" exclude="Build,Analyzers" />
      </group>
    </dependencies>
  </metadata>
  <files>
    <file src="bin\$Configuration$\**\Epoxy.dll" target="lib" />
    <file src="bin\$Configuration$\**\Epoxy.pdb" target="lib" />
    <file src="bin\$Configuration$\**\Epoxy.xml" target="lib" />
    <file src="..\..\Images\Epoxy.100.png" target="/" />
