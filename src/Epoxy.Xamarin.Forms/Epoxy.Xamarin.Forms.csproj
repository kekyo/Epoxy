<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <AssemblyName>Epoxy</AssemblyName>
    <TargetFramework>netstandard2.0</TargetFramework>
    <AssemblyTitle>Epoxy.Xamarin.Forms</AssemblyTitle>
    <PackageId>Epoxy.Xamarin.Forms</PackageId>
    <PackageTags>$(PackageTags);xamarin</PackageTags>
    <EpoxyBuildAppendPackageDependency>true</EpoxyBuildAppendPackageDependency>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)' == 'Debug'">
    <DefineConstants>DEBUG;TRACE;XAMARIN_FORMS</DefineConstants>
  </PropertyGroup>
  <PropertyGroup Condition="'$(Configuration)' == 'Release'">
    <DefineConstants>TRACE;XAMARIN_FORMS</DefineConstants>
  </PropertyGroup>

  <ItemGroup>
    <ProjectReference Include="..\Epoxy.Core.Xamarin.Forms\Epoxy.Core.Xamarin.Forms.csproj" />
  </ItemGroup>

  <ItemGroup>
    <Compile Include="../Epoxy/**/*.cs" />
    <None Include="../../Images/Epoxy.100.png" Pack="true" PackagePath="" />
  </ItemGroup>

</Project>
