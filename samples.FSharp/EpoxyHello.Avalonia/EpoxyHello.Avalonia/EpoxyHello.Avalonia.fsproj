<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <OutputType>Library</OutputType>
    <TargetFramework>netstandard2.0</TargetFramework>
    <LangVersion>latest</LangVersion>
    <Nullable>enable</Nullable>
    <DebugType>portable</DebugType>
    <DebugSymbols>true</DebugSymbols>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.NETFramework.ReferenceAssemblies" Version="1.0.0" PrivateAssets="All" />
    <PackageReference Include="System.Net.Http" Version="4.3.4" />
    <PackageReference Include="System.ValueTuple" Version="4.5.0" />
    <PackageReference Include="System.Threading.Tasks.Extensions" Version="4.5.4" />
    <PackageReference Include="FSharp.Core" Version="5.0.1" />
    <PackageReference Include="FSharp.Control.FusionTasks" Version="2.1.0" />
    <PackageReference Include="Avalonia" Version="0.10.0" />
    <PackageReference Include="Avalonia.Diagnostics" Version="0.10.0" />
    <PackageReference Include="Newtonsoft.Json" Version="12.0.3" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\..\..\src\FSharp.Epoxy.Avalonia\FSharp.Epoxy.Avalonia.fsproj" />
    <ProjectReference Include="..\..\..\samples\EpoxyHello.Core\EpoxyHello.Core.csproj" />
  </ItemGroup>

  <ItemGroup>
    <Page Remove="**/*.xaml" />
    <Resource Include="**/*.xaml" />
  </ItemGroup>

  <ItemGroup>
    <Compile Include="Controls/**/*.fs" />
    <Compile Include="ViewModels/**/*.fs" />
    <Compile Include="Views/**/*.fs" />
    <Compile Include="App.axaml.fs" />
  </ItemGroup>

  <ItemGroup />

</Project>
